<fieldset>
  <legend><%= variant.sku %> (<%= variant.is_master? ? Spree.t(:master) : variant.options_text.blank? ? Spree.t(:variant) : variant.options_text %>)</legend>
  <% ['GBP', 'USD', 'EUR'].map { |code| ::Money::Currency.find(code) }.each do |currency| %>
    <% code  = currency.iso_code %>
    <% price = variant.price_in(code) %>
    <div class="form-group">
      <%= label_tag "vp[#{variant.id}][#{code}]", code %>
      <%= text_field_tag "vp[#{variant.id}][#{code}]", (price ? price.display_amount.money : '') %>
    </div>
  <% end %>
</fieldset>
